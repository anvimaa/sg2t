<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Configurações do Sistema</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item">Configurações</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link active" href="#geral" data-toggle="tab">Configurações Gerais</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#aspecto" data-toggle="tab">Aspecto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#logs" data-toggle="tab">Logs</a>
                    </li>
                </ul>
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="geral">
                            <p>Em desenvolvimento</p>
                        </div>
                        <div class="tab-pane" id="aspecto">
                            <p>Em desenvolvimento</p>
                        </div>
                        <div class="tab-pane" id="logs">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Descrição</th>
                                        <th>Estado</th>
                                        <th>Usuario</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each logs}}
                                    <tr>
                                        <td>{{this.createdAt}}</td>
                                        <td>{{this.description}}</td>
                                        {{#if this.success}}
                                        <td><span class="badge badge-success">Sucesso</span></td>
                                        {{else}}
                                        <td><span class="badge badge-danger">Erro</span></td>
                                        {{/if}}
                                        <td>{{this.user.nome}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>